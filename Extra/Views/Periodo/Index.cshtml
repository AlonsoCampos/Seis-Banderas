@model IEnumerable<Extra.Models.Periodo>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Agregar nuevo Periodo", "AgregarPeriodo")
    </p>
    <table>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Activo
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.ActionLink("Modificar", "Modificar", new { id=item.IdPeriodo  }) |
                @Html.ActionLink("Detalles", "Detalles", new { id=item.IdPeriodo  }) |
                @Html.ActionLink("Eliminar", "Eliminar", new { id=item.IdPeriodo })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
